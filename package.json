{
  "name": "rsbuild-plugin-mcp",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinaaa/rsbuild-plugin-mcp.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "bump": "npx bumpp",
    "dev": "rslib build --watch",
    "lint": "dprint check && biome check .",
    "lint:write": "dprint fmt && biome check . --write",
    "prepare": "simple-git-hooks && npm run build",
    "test": "rstest"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:write"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@rsbuild/core": "^1.5.13",
    "@rslib/core": "^0.15.0",
    "@rstest/core": "^0.5.1",
    "@types/node": "^22.18.8",
    "dprint": "^0.50.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@rsbuild/core": "1.x"
  },
  "peerDependenciesMeta": {
    "@rsbuild/core": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.17.1",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
